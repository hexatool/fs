{
	"extends": "@hexatool/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@hexatool/fs-file-system": [
				"packages/file-system/src/index"
			],
			"@hexatool/fs-*/async": [
				"packages/*/src/async"
			],
			"@hexatool/fs-*": [
				"packages/*/src/sync"
			],
			"@hexatool/fs/async": [
				"packages/fs/src/async"
			],
			"@hexatool/fs": [
				"packages/fs/src/sync"
			]
		}
	}
}
