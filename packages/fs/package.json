{
	"name": "@hexatool/fs",
	"version": "0.0.1-next.2",
	"description": "Modular fs library",
	"keywords": [
		"fs",
		"file",
		"file system",
		"promise"
	],
	"homepage": "https://github.com/hexatool/fs",
	"bugs": {
		"url": "https://github.com/hexatool/fs/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/fs"
	},
	"author": "MarioMH8",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/hexatool-fs-sync.mjs",
	"types": "./dist/types/src/sync.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/src/sync.d.ts",
			"default": "./dist/hexatool-fs-sync.mjs"
		},
		"./async": {
			"types": "./dist/types/src/async.d.ts",
			"default": "./dist/hexatool-fs-async.mjs"
		}
	},
	"scripts": {
		"build": "vite build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"test": "vitest run --no-isolate",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@hexatool/fs-copy": "0.0.1-next.0",
		"@hexatool/fs-create-file": "0.0.1-next.0",
		"@hexatool/fs-create-link": "0.0.1-next.0",
		"@hexatool/fs-empty-dir": "0.0.1-next.0",
		"@hexatool/fs-make-dir": "0.0.1-next.0",
		"@hexatool/fs-move": "0.0.1-next.0",
		"@hexatool/fs-path-exists": "0.0.1-next.0",
		"@hexatool/fs-remove": "0.0.1-next.0",
		"@hexatool/fs-stat": "0.0.1-next.0",
		"@hexatool/fs-temporary": "0.0.1-next.2"
	},
	"devDependencies": {
		"@hexatool/eslint-config-typescript": "1.0.2",
		"@hexatool/tsconfig": "18.0.0",
		"@types/node": "18.11.18",
		"@vitest/coverage-c8": "0.27.0",
		"eslint": "8.31.0",
		"rollup-plugin-typescript2": "0.34.1",
		"typescript": "4.9.4",
		"vite": "4.0.4",
		"vitest": "0.27.0"
	},
	"engines": {
		"node": ">=14.16.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
