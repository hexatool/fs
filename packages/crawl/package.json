{
	"name": "@hexatool/fs-crawl",
	"version": "0.0.1-next.1",
	"description": "Modular fs library",
	"keywords": [
		"fs",
		"file",
		"file system",
		"promise"
	],
	"homepage": "https://github.com/hexatool/fs",
	"bugs": {
		"url": "https://github.com/hexatool/fs/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/fs"
	},
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/hexatool-fs-crawl-sync.mjs",
	"types": "./dist/sync.d.ts",
	"exports": {
		".": {
			"types": "./dist/sync.d.ts",
			"default": "./dist/hexatool-fs-crawl-sync.mjs"
		},
		"./async": {
			"types": "./dist/async.d.ts",
			"default": "./dist/hexatool-fs-crawl-async.mjs"
		},
		"./builder": {
			"types": "./dist/builder.d.ts",
			"default": "./dist/hexatool-fs-crawl-builder.mjs"
		},
		"./iterator": {
			"types": "./dist/iterator.d.ts",
			"default": "./dist/hexatool-fs-crawl-iterator.mjs"
		},
		"./stream": {
			"types": "./dist/stream.d.ts",
			"default": "./dist/hexatool-fs-crawl-stream.mjs"
		}
	},
	"typesVersions": {
		"*": {
			"async": [
				"./dist/async.d.ts"
			],
			"builder": [
				"./dist/builder.d.ts"
			],
			"iterator": [
				"./dist/iterator.d.ts"
			],
			"stream": [
				"./dist/stream.d.ts"
			]
		}
	},
	"scripts": {
		"build": "vite build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"test": "vitest run --no-isolate",
		"test:bench": "tsx benchmark/benchmark.ts",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@hexatool/fs-file-system": "0.0.1-next.3"
	},
	"devDependencies": {
		"@nodelib/fs.walk": "1.2.8",
		"@types/klaw": "3.0.3",
		"@types/klaw-sync": "6.0.1",
		"@types/mock-fs": "4.13.1",
		"csv-to-markdown-table": "1.3.0",
		"fdir": "6.0.1",
		"klaw": "4.1.0",
		"klaw-sync": "6.0.0",
		"mock-fs": "5.2.0",
		"readdir-enhanced": "6.0.4",
		"systeminformation": "5.17.12",
		"tinybench": "2.4.0"
	},
	"engines": {
		"node": ">=14.16.0"
	}
}
