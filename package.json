{
	"name": "@hexatool/fs-monorepo",
	"version": "0.0.0",
	"description": "Modular fs library",
	"keywords": [
		"fs",
		"file",
		"file system",
		"copy",
		"directory",
		"extra",
		"mkdirp",
		"mkdir",
		"mkdirs",
		"recursive",
		"json",
		"read",
		"write",
		"extra",
		"delete",
		"remove",
		"touch",
		"create",
		"text",
		"output",
		"move",
		"promise"
	],
	"homepage": "https://github.com/hexatool/fs",
	"bugs": {
		"url": "https://github.com/hexatool/fs/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/fs"
	},
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -pv run build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"publish": "changeset publish",
		"test": "vitest run --no-isolate",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "yarn workspaces foreach -pv run typecheck",
		"version": "changeset version && $npm_execpath install"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.1",
		"@hexatool/eslint-config-typescript": "1.0.11",
		"@hexatool/tsconfig": "18.0.0",
		"@vitest/coverage-c8": "0.33.0",
		"eslint": "8.57.0",
		"typescript": "4.9.5",
		"vite": "4.5.2",
		"vite-plugin-dts": "2.3.0",
		"vite-plugin-externalize-deps": "0.8.0",
		"vite-tsconfig-paths": "4.3.1",
		"vitest": "0.34.6"
	},
	"volta": {
		"node": "18.19.1",
		"yarn": "3.8.0"
	},
	"packageManager": "yarn@3.8.0"
}
